<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.example.android.navigation.PilihFragment"
>
<androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="Persegi Panjang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnPersegi" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="Segitiga Siku-SIku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnSegitiga" app:layout_constraintEnd_toEndOf="@+id/btnPersegi"
            app:layout_constraintStart_toStartOf="@+id/btnPersegi" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnPersegi"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>